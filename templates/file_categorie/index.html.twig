{% extends 'base.html.twig' %}

{% block title %}FilesCategories index{% endblock %}

{% block body %}
    <h1>FilesCategories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for files_category in files_categories %}
            <tr>
                <td>{{ files_category.id }}</td>
                <td>{{ files_category.name }}</td>
                <td>{{ files_category.createdAt ? files_category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ files_category.updatedAt ? files_category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_file_categorie_show', {'id': files_category.id}) }}">show</a>
                    <a href="{{ path('app_file_categorie_edit', {'id': files_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_file_categorie_new') }}">Create new</a>
{% endblock %}
