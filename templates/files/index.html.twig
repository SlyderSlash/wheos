{% extends 'base.html.twig' %}

{% block title %}Files index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/filesstyles.css')}} "> 
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
{% endblock %}


{% block body %}
    
    <h1>Files index</h1>
    
    <div class="conteneur">

    <table class="table">
        
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Path</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for file in files %}
            <tr>
                <td>{{ file.id }}</td>
                <td>{{ file.name }}</td>
                <td>{{ file.createdAt ? file.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ file.updatedAt ? file.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ file.path }}</td>
                <td>
                    <a href="{{ path('app_files_edit', {'id': file.id}) }}">edit</a>
                    <a href="{{ path('app_files_delete', {'id': file.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button> <text> Ajouter un nouveau document</text> <a class="addfile" href="{{ path('app_files_new') }}"> <span class="material-symbols-outlined"> add_circle </span> </a> </button>
    </div>

{% endblock %}