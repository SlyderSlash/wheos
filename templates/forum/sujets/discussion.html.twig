{% extends 'base.html.twig' %}
{# TODO: pour tester l'extension TODO #}
{% block title %}WHEOS |{{discussions[0].titre}}{% endblock %}
	
{% block body %}
	<section class="container">
		<div class="row my-3 align-items-center border-forum">
			<div class="col-1">
				<a href="{{ path('app_forum') }}" class="text-decoration-none" role="button">
					<i class="bi bi-chat-right-text-fill" style="font-size:64px;color:white"></i>
				</a>
			</div>
		</div>
		<div class="row my-3 align-items-center">
			<div class="col fs-6 text-uppercase mx-4">
				<a href="{{path('app_forum')}}" class="text-decoration-none forum-text-2">Forum</a>
				<span class="text-success">
					>
				</span>
				<a href="{{path('forum_subforum',{id:category.id})}}" class="text-decoration-none forum-text-2">{{discussions[0].cName}}</a>
				<span class="text-success">
					>
				</span>
                <a href="{{path('forum_sujet',{id:category.id, sujet:discussions[0].forum})}}" 
                        class="text-decoration-none forum-text-2">{{discussions[0].titre}}</a>				
			</div>
		</div>

		<div class="row d-flex align-items-center my-3 ">
			<div class="col-2 logo-forum">
				<img src="logo_forum.jpg" alt="logo_forum" width="100" height="100">
			</div>
			<div class="col-10 text-start txt-forum-2">
				Forum d'entraide des stagiaires de l'AFPA.<br>
				Bienvenue sur le forum des stagiaires des centres afpa du france.
			</div>
		</div>

		{% if app.user %}
			<div class="p-2 my-2 text-end">
				<button type="button" id="add" onclick="addResponse(this);"
						class="btn btn-dark text-start" 
						data-bs-toggle="collapse" 
						data-bs-target="#frm">
					Ajouter une réponse
					<i id="circle" class="bi bi-plus-circle-fill"></i>
				</button>
			</div>
			{# formulaire #}
			<div class="row border-forum collapse my-2 text-light" id="frm">
				{{ form_start(form) }}
				{{ form_widget(form) }}
				<div class="col-12 m-2">
					<button class="btn btn-primary" type="submit">Ajouter</button>
				</div>
				{{ form_end(form) }}
			</div>
            {% for message in discussions %}
                <div class="row p-3 border-forum my-2">
                    <div class="row bg-gradient-forum border-forum-rd-tl border-forum-rd-tr">
                        <div class="col">
                            <i class="bi bi-chat-right glif-size-forum "></i>
                        </div>
                        <div class="col"> 
                            {{message.dt | date('d/m/Y , H:m')}}
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-2 text-center txt-forum-3">
                            <i class="bi bi-person-circle glif-size-forum "></i><br>
                            {{app.user.getLastName()}}.{{app.user.getFirstName()}}
                        </div>
                        <div class="col border-forum-left">
                            {{message.message}}
                        </div>
                    </div> 
                </div>
            {% endfor %}
		{% else %}
			<div class="alert alert-danger alert-dismissible" role="alert">
				<div class="alert-message">
					<p>Vous devez être connecté pour acceder aux discussions</p>
				</div>
			</div>
		{% endif %} 
	</section>

{% endblock %}
